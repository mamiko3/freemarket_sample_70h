#header
  #{image_tag 'logo.png'}
%h2 住所情報登録

.contents
  = form_for @address do |f|
    = render "devise/shared/error_messages", resource: @address
    .field
      = f.label :"郵便番号"
      %span.form-require 必須
      %span.form-require3 半角
      %br/
      = f.text_field :zip, autofocus: true, placeholder: "例）123-0099"
    .field
      = f.label :"都道府県"
      %span.form-require 必須
      %br/
      = f.text_field :pref, placeholder: "例）東京都"
    .field
      = f.label :"市区町村"
      %span.form-require 必須
      %br/
      = f.text_field :city, autofocus: true, autocomplete: "例）渋谷区"
    .field
      = f.label :"丁目、番地"
      %span.form-require 必須
      %br/
      = f.text_field :block, autofocus: true, autocomplete: "例）神宮前4-4-4"
    .field
      = f.label :"ビル、マンション名"
      %br/
      = f.text_field :building, autofocus: true, autocomplete: "例）◯◯ビル9F"
    .field
      = f.label :"宛先（氏）"
      %span.form-require 必須
      %br/
      = f.text_field :dst_last_name, autofocus: true, autocomplete: "例）苗字"
    .field
      = f.label :"宛先（名）"
      %span.form-require 必須
      %br/
      = f.text_field :dst_first_name, autofocus: true, autocomplete: "例）名前"
    .field
      = f.label :"ふりがな 宛先（氏）"
      %span.form-require 必須
      %br/
      = f.text_field :dst_last_name_kana, autofocus: true, autocomplete: "例）みょうじ"
    .field
      = f.label :"ふりがな 宛先（名）"
      %span.form-require 必須
      %br/
      = f.text_field :dst_first_name_kana, autofocus: true, autocomplete: "例）なまえ"
    
    .actions2
      = f.submit "SignUp"

.bottom
  
=render 'layouts/footer_usr'



